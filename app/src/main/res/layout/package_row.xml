<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/b1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/customer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/round_green"
            android:paddingEnd="10dp"
            android:text="Fariya000134 - Basic Internet"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="17sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/package_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/customer_name"
            android:layout_marginTop="5dp"
            android:text="Internet"
            android:textColor="@color/androidLightGrey"
            android:textSize="16sp">

        </TextView>


        <TextView
            android:id="@+id/speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/package_type"
            android:drawableTint="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="Speed: 5 MBPS"
            android:textColor="@color/androidGreyDark"
            android:textSize="17sp">

        </TextView>

        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/speed"
            android:layout_marginTop="10dp"
            android:drawableTint="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="Amount: 1500 PKR"
            android:textColor="@color/androidGreyDark"
            android:textSize="17sp">

        </TextView>

        <TextView
            android:id="@+id/discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/amount"
            android:layout_marginTop="10dp"
            android:drawableTint="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="Discount: 10%"
            android:textColor="@color/androidGreyDark"
            android:textSize="17sp">

        </TextView>


        <TextView
            android:padding="10dp"
            android:id="@+id/view_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/amount"
            android:layout_alignParentEnd="true"
            android:drawableTint="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="View Detail"
            android:textSize="17sp">

        </TextView>


    </RelativeLayout>
</androidx.cardview.widget.CardView>