<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recovery Alert"
            android:textColor="@color/black"
            android:textSize="18sp">

        </TextView>


        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Shariq please recover payment from customer SAQIB address R-83/15 Federal B Area, Karachi"
            android:textColor="@color/androidGrey"
            android:textSize="15sp">

        </TextView>

        <TextView
            android:id="@+id/receiver_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Receiver Type: Agent/Custoemr"
            android:textColor="@color/androidGrey"
            android:textSize="15sp">

        </TextView>

        <TextView
            android:id="@+id/receiver_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Receiver Name: Shariq Khan"
            android:textColor="@color/androidGrey"
            android:textSize="15sp">

        </TextView>

        <TextView
            android:id="@+id/date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:text="15:30 12-May-2020"
            android:textSize="12sp" />


    </LinearLayout>
</androidx.cardview.widget.CardView>